        <img src="http://212.83.166.50/HangmanWeb/lives_7.png">
    </div>
    <img src="http://212.83.166.50/HangmanWeb/7_lifes.png">
{{ else if eq .Lifes 6 }}
    <div id="life">
        <img src="http://212.83.166.50/HangmanWeb/lives_6.png">
    </div>
{{ else if eq .Lifes 5 }}
    <div id="life">
        <img src="http://212.83.166.50/HangmanWeb/lives_5.png">
    </div>
    <img src="http://212.83.166.50/HangmanWeb/5_lifes.png">
{{ else if eq .Lifes 4 }}
