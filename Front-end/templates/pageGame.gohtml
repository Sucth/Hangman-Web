    </div>
    <img src="http://212.83.166.50/HangmanWeb/3_lifes.png">
{{ else if eq .Lifes 2 }}
    <div id="life">
        <img src="http://212.83.166.50/HangmanWeb/lives_2.png">
    </div>
    <img src="http://212.83.166.50/HangmanWeb/2_lifes.png">
{{ else if eq .Lifes 1 }}
    <div id="life">
        <img src="http://212.83.166.50/HangmanWeb/life_1.png">
    </div>
    <img src="http://212.83.166.50/HangmanWeb/1_lifes.png">
{{ end }}
<h1 class="larger"> {{ .LWord }} </h1>
</body>
</html>

