<!DOCTYPE html>
<html lang="en">
<img src="https://fontmeme.com/permalink/221125/fc9a4a23fa3412e114b26d26a1f90ed1.png" id="thg">
<head>
    <meta charset="UTF-8">
    <title>Title</title>


    {{ if eq .Difficulty "1" }}
        <link rel="stylesheet" type="text/css" href="../stylesheets/easyPage.css">
    {{ else if eq .Difficulty "2"}}
        <link rel="stylesheet" type="text/css" href="../stylesheets/mediumPage.css">
    {{ else if eq .Difficulty "3"}}
        <link rel="stylesheet" type="text/css" href="../stylesheets/hardPage.css">
    {{end}}




</head>
<body>



<div id="chooseword" >
    <p id="p">CHOOSE WORD</p>
    <form action="/Game" method="post">
        <input id="story" name="letter">
        <button id="select" type="submit">
            SELECT
        </button>
        <br>
        <label for="Letterused">Letters Used :</label>
        <p id="Letterused">{{ .Lettersusd }}</p>
        <label>Message : </label>
        <p id="msgbox">{{ .Msg }}</p>
    </form>
</div>
    {{ if eq .Lifes 10 }}
    <div id="life">
        <img src="http://212.83.166.50/HangmanWeb/lives_10.png">
    </div>
        <!-- Pas d'images pour le stickman -->
{{ else if eq .Lifes 9 }}
    <div id="life">
        <img src="http://212.83.166.50/HangmanWeb/lives_9.png">
    </div>
        <img src="http://212.83.166.50/HangmanWeb/9_lifes.png">
{{ else if eq .Lifes 8 }}
    <div id="life">
        <img src="http://212.83.166.50/HangmanWeb/lives_8.png">
    </div>
    <img src="http://212.83.166.50/HangmanWeb/8_lifes.png">
{{ else if eq .Lifes 7 }}
